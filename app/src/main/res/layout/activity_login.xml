<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.LoginActivity">


    <LinearLayout
        android:id="@+id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="13dp"
            android:layout_marginRight="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/scd5"
                android:text="로그인"
                android:textColor="#000000"
                android:textSize="18dp" />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/topLayout"
            android:layout_marginTop="10dp"
            android:background="#000000" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/topLayout">

        <!--        <ImageView-->
        <!--            android:layout_width="50dp"-->
        <!--            android:layout_height="50dp"-->
        <!--            android:background="@drawable/app_logo"-->
        <!--            android:backgroundTint="#FFFFFF"-->
        <!--            />-->

        <!--        <TextView-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:text="로그인"-->
        <!--            android:textColor="#FFFFFF"-->
        <!--            android:textSize="45dp"-->
        <!--            android:fontFamily="@font/scd6"-->
        <!--            android:layout_gravity="center_horizontal"/>-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/activity_login_edittext">

            <ImageView
                android:id="@+id/email_logo"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:background="@drawable/email_logo"
                android:backgroundTint="#000000"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"/>

            <EditText
                android:id="@+id/userEmail"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@null"
                android:textColor="#000000"
                android:hint="Email"
                android:layout_toRightOf="@+id/email_logo"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:inputType="textEmailAddress"
                android:fontFamily="@font/scd5"
                android:gravity="center_vertical"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/activity_login_edittext">

            <ImageView
                android:id="@+id/password_logo"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:background="@drawable/password_logo"
                android:backgroundTint="#000000"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:scaleType="fitXY"/>

            <EditText
                android:id="@+id/userPassword"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@null"
                android:textColor="#000000"
                android:hint="Password"
                android:layout_toRightOf="@+id/password_logo"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:inputType="textPassword"
                android:fontFamily="@font/scd5"
                android:gravity="center_vertical"/>
        </RelativeLayout>

        <com.google.android.gms.common.SignInButton
            android:id="@+id/loginGoogle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/loginButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/activity_login_edittext"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:text="로그인"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:fontFamily="@font/scd5"/>

        <TextView
            android:id="@+id/signupButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="회원가입"
            android:textStyle="bold"
            android:textColor="#000000"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:fontFamily="@font/scd5"
            android:layout_marginTop="5dp"/>
    </LinearLayout>

</RelativeLayout>